<!DOCTYPE html>
<html>
<head>
  <title>Ksl</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <div class="<%= class_type %>">
    <% if user_signed_in? %>
      Welcome
        <%= link_to current_user.first_name, edit_user_registration_path %>! |
        <%= link_to 'Logout', destroy_user_session_path %> |
        <%= link_to 'See Classifieds', posts_path %>
    <% else %>
        <%= link_to 'Login', new_user_session_path %> |
        <%= link_to 'Sign Up', new_user_registration_path %> |
        <%= link_to 'See Classifieds', posts_path %>
    <% end %>
  </div>

	<div class="header_container">
		<div class="header_menu">
			<div style="color:#FFF; font-size:30px; font-family:georgia; padding-top:60px; padding-left:20px; font-style:italic">Where Sellers Meet Buyers
			</div>
			<div id="home_button">
				<%= link_to 'Home', welcome_path %>
			</div>
			<div id="classifieds_button">
				<%= link_to 'Classifieds', posts_path %>
			</div>
			<div id="contact_button">
				<%= link_to 'Contact Us', 'contact' %>
			</div>
		</div>
	</div>

  <div class='body_container'>
    <div class='alert'><%= alert %></div>
    <div class='notice'><%= notice %></div>

    <%= yield %>
  </div>

</body>
</html>
