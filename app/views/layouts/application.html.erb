<!DOCTYPE html>
<html>
<head>
  <title>Ksl</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <div class="<%= class_type %>">
    <% if user_signed_in? %>
      Welcome
        <%= link_to current_user.first_name, edit_user_registration_path %>! |
        <%= link_to 'Logout', destroy_user_session_path %> |
        <%= link_to 'See Classifieds', posts_path %> |
        <%= link_to 'See Categories', categories_path %> |
				<%= link_to 'My Posts', user_path(current_user) %>
    <% else %>
        <%= link_to 'Login', new_user_session_path %> |
        <%= link_to 'Sign Up', new_user_registration_path %> |
        <%= link_to 'See Classifieds', posts_path %>
        <%= link_to 'See Categories', categories_path %>
    <% end %>
  </div>

	<div class="header_container">
		<div class="header_menu">
			<div id="home_button">
				<%= link_to 'Home', welcome_path %>
			</div>
			<div id="classifieds_button">
				<%= link_to 'Classifieds', posts_path %>
			</div>
			<div id="contact_button">
				<%= link_to 'Contact Us', :contact %>
			</div>
      <div class="main_menu">
        <ul>
          <li><%= link_to "Home", :welcome, :class=>"#{@welcome_class}" %></li>
          <li><%= link_to "Classifieds", posts_path, :class=>"#{@classifieds_class}" %></li>
          <li><%= link_to "Contact", :contact, :class=>"#{@contact_class}" %></li>
        </ul>
      </div>
			<div class="middle_banner">
				<div id="<%= @current_banner %>">
				</div>	
			</div>
		</div>

	</div>

	<div class="chat_now">
		<%= link_to "chat", :contact %>
	</div>

  <div class='body_container'>
		<% if alert.present? %>
	    <div class='alert'><%= alert %></div>
		<% elsif notice.present? %>
	    <div class='notice'><%= notice %></div>
		<% end %>

		<div class="content">
			<div class="main_content">
				<%= yield %>
			</div>
			<div class="right_content">
				<%= yield :right_content%>
			</div>
		</div>
		<p class="clear" />
  </div>
	<div class="footer_spacer">
	</div>
	<div class="footer">
		<div id="<%= @footer_image %>">
			<p>&copy; DK KSL &nbsp;&nbsp;
				<%= link_to "Privacy Policy", "#" %> |
				<%= link_to "Terms  & Conditions", "#" %>
			</p>
		</div>
	</div>
	<div class="buy_now">
		<%= link_to "buy", posts_path %>
	</div>

</body>
</html>
