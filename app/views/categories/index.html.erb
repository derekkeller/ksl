<div class="category_list">
	<h2>Browse By Category</h2>
	<ul>
		<% @categories.each do |category| %>
			<li>
				<%= link_to category.name, category %>
			</li>
		<% end %>
			<li><%= link_to "All Posts", :all_posts %></li>
	</ul>
	<% if can? :create, Category %>
		<%= link_to "New Category", new_category_path %>
	<% end %>

</div>